<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/content_margin_large">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_white"
                android:gravity="center"
                android:paddingBottom="18dp"
                android:orientation="vertical">
            <ImageView
                    android:id="@+id/img_kategori"
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:background="@drawable/ibadah_banner"
                    android:scaleType="fitXY"/>
            <TextView
                    android:id="@+id/tv_nama_kategori"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/content_margin_large"
                    android:text="@string/text_ibadah"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimaryDark"/>

            <TextView
                    android:id="@+id/tv_nama_kategori_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/content_margin_large"
                    android:text="@string/text_lengkapi_ibadah"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorHeavyBlue"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>